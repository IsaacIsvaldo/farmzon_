<header>


    <!-- MAIN HEADER -->
    <div id="header">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- LOGO -->
                <div class="col-md-3">
                    <div class="header-logo">
                        <a  class="navbar-brand mx-auto mt-2 flex-fill 	008c8c text-center" href="/Clientelogado">
                            <img style="width:75%" src="http://localhost:1002/upload/farmazon.png" alt="">
                        </a>
                    </div>
                </div>
                <!-- /LOGO -->

                <!-- SEARCH BAR -->
                <div class="col-md-6">
                    <div class="header-search">
                        <form method="post" action="/Pesquisarm">
                            <select class="input-select w-50" style="width:20%" name="idCategoria">
                                <option value="0" >Todos</option>
                                <% categoria.reverse().map(c=> {%>
                                    <option value="<%=c.idCategoria%>"><%=c.nomeCategoria%></option>
                                <%}) %> 
                            </select>
                            <input class="input" name="medicamento" required placeholder="Pesquisa Aqui">
                            <button class="search-btn">Pesquisar</button>
                        </form>
                    </div>
                </div>
                <!-- /SEARCH BAR -->

                <!-- ACCOUNT -->
                <div class="col-md-3 clearfix">
                    <div class="header-ctn">
                        <div>
                            <a onclick="enviarProdutos()">
                                <i class="fa fa-shopping-cart"></i>
                                <span>Carrinho</span>
                                <div id="Quantidade" class="qty"></div>
                            
                            </a>
                        </div>

                        <!-- Cart -->
                        <div class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                <i class="fa fa-user-circle"></i>
                                <span>Perfil</span>
                            </a>
                            <div class="cart-dropdown">
                                <div class="cart-list">
                                    <div class="product-widget">
                                        <p>Perfil</p>
                                        <p>Denifições</p>
                                    </div>
                                </div>
                                
                                <div class="cart-btns">
                                    <a href="/perfil">Perfil <i class="fa fa-user"></i></a>
                                    <a href="/logout">Sair<i class="fa fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        </div>
                        <!-- /Cart -->
                        <!-- Wishlist -->
                        <div>
                        
                        </div>
                        <!-- /Wishlist -->

                        <!-- Menu Toogle -->
                        <div class="menu-toggle">
                            <a href="#">
                                <i class="fa fa-bars"></i>
                                <span>Menu</span>
                            </a>
                        </div>
                        <!-- /Menu Toogle -->
                    </div>
                </div>
                <!-- /ACCOUNT -->
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </div>
    <!-- /MAIN HEADER -->
</header>
<script>
    const enviarProdutos=()=>{
        const v=JSON.parse(localStorage.getItem('c')).map(c=>parseInt(c))
        window.location="/Carrinho/"+v
    }
</script>