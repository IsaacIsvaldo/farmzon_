    <script>
        
        // console.log(JSON.parse(localStorage.getItem('c')).map(c=>parseInt(c)));
        const adicionarQuantidade=()=>{
            const quantidade=document.getElementsByClassName('q');
            const preco=document.getElementsByClassName('preco');
            const total=document.getElementsByClassName('total');
            const final=document.getElementById('final'); 
            let resultado=0;
            console.log(quantidade[0].value);
            for (let index = 0; index < quantidade.length; index++) {
                //   console.log(quantidade[index].value); 
                //   console.log(preco[index].innerHTML); 
              const valorTotal=quantidade[index].value*preco[index].innerHTML;
              document.getElementsByClassName('total')[index].innerHTML=valorTotal;
              resultado+=valorTotal;
                
            }
            document.getElementById('final').innerHTML=resultado;
        }
        adicionarQuantidade();

        const eliminar=(id)=>{
            localStorage.setItem('c',JSON.stringify(JSON.parse(localStorage.getItem('c')).map(c=>c).filter(dd=>dd!==id)));
            const f=JSON.parse(localStorage.getItem('c')).map(c=>parseInt(c))
            window.location='/Carrinho/'+f
        }
